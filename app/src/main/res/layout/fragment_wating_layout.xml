<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fragment_dialog_title"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />
    <cn.ac.iscas.xlab.droidfacedog.CircleRotateView
    android:id="@+id/id_loading_view"
    android:layout_width="60dp"
    android:layout_height="60dp"
    app:circle_color="#dd00ff"
    app:wrap_color="#14cdf2"
    app:stroke_width="5dp"
    android:layout_margin="20dp"
    />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/id_bt_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tip_cancel_ros_connect"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorPrimary"
            />

        <Button
            android:id="@+id/id_bt_recog_direct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/tip_recog_without_ros"
            android:textColor="@color/colorPrimary"/>

    </LinearLayout>
</LinearLayout>